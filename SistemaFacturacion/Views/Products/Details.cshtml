@*
    VIEW FOR DISPLAYING PRODUCT DETAILS
    Design: Centered card that presents information in a clear and organized way.
    UX: Uses icons and badges to improve readability and visual appeal.
*@

@model SistemaFacturacion.Models.Product

@{
    ViewData["Title"] = "Detalles del Product";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg mt-4">

            @* SECTION 1: View Header *@
            <div class="card-header text-center bg-dark text-white">
                <h3 class="my-2">@ViewData["Title"]</h3>
            </div>

            @* SECTION 2: Product Details List *@
            <div class="card-body p-4">
                <h4 class="card-title text-center mb-4">@Model.Name</h4>

                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span class="fw-bold"><i class="fas fa-barcode me-2 text-muted"></i>Código</span>
                        <span>@Html.DisplayFor(model => model.Code)</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span class="fw-bold"><i class="fas fa-tag me-2 text-muted"></i>Categoría</span>
                        <span>@Html.DisplayFor(model => model.Category)</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span class="fw-bold"><i class="fas fa-dollar-sign me-2 text-muted"></i>Precio</span>
                        <span>@Model.Price.ToString("C")</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span class="fw-bold"><i class="fas fa-boxes me-2 text-muted"></i>Stock Actual</span>
                        <span>@Html.DisplayFor(model => model.Stock)</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span class="fw-bold"><i class="fas fa-power-off me-2 text-muted"></i>Estado</span>
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactivo</span>
                        }
                    </li>
                </ul>
            </div>

            @* SECTION 3: Action Footer Buttons *@
            <div class="card-footer bg-light text-center">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning mx-1">
                    <i class="fas fa-pencil-alt me-2"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary mx-1">
                    <i class="fas fa-arrow-left me-2"></i> Volver a la Lista
                </a>
            </div>
        </div>
    </div>
</div>