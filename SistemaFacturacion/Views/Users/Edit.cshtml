@model SistemaFacturacion.Models.ViewModels.UserEditViewModel

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg mt-4">

            <div class="card-header text-center bg-dark text-white">
                <h3 class="my-2">@ViewData["Title"]</h3>
            </div>

            <div class="card-body p-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="NombreUsuario" class="form-label fw-bold"></label>
                        <input asp-for="NombreUsuario" class="form-control" />
                        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Rol" class="form-label fw-bold"></label>
                        <select asp-for="Rol" class="form-select">
                            <option value="Administrador">Administrador</option>
                            <option value="Vendedor">Vendedor</option>
                            <option value="Bodeguero">Bodeguero</option>
                        </select>
                        <span asp-validation-for="Rol" class="text-danger"></span>
                    </div>

                    <hr />
                    <p class="text-muted">Deje los siguientes campos en blanco si no desea cambiar la contraseña.</p>

                    <div class="mb-3">
                        <label asp-for="NuevaContrasena" class="form-label fw-bold"></label>
                        <input asp-for="NuevaContrasena" class="form-control" />
                        <span asp-validation-for="NuevaContrasena" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmarContrasena" class="form-label fw-bold"></label>
                        <input asp-for="ConfirmarContrasena" class="form-control" />
                        <span asp-validation-for="ConfirmarContrasena" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i> Guardar Cambios
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times-circle me-2"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>