@model IEnumerable<SistemaFacturacion.Models.User>

@{
    ViewData["Title"] = "Modulo de Gestión de Usuarios";
}

<div class="container mt-4">

    @* SECCIÓN 1: Encabezado y Botón de Acción Principal *@
    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <h1>@ViewData["Title"]</h1>
            <p class="text-muted">Administre los usuarios y roles del sistema.</p>
        </div>
        <div class="col-md-6 text-md-end">
            <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
                <i class="fas fa-user-plus me-2"></i>Crear Nuevo Usuario
            </a>
        </div>
    </div>

    @* SECCIÓN 2: Recuadro de búsqueda (opcional, pero consistente) *@
    <form asp-controller="Users" asp-action="Index" method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="terminoBusqueda" class="form-control" placeholder="Buscar por Nombre de Usuario o Rol..." />
            <button type="submit" class="btn btn-primary">Buscar</button>
            <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
        </div>
    </form>

    @* SECCIÓN 3: Tabla con la Lista de Usuarios *@
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().NombreUsuario)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Rol)
                        </th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreUsuario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Rol)
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Editar">
                                    <i class="fas fa-pencil-alt"></i> Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white" title="Ver Detalle">
                                    <i class="fas fa-eye"></i> Detalles
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Eliminar">
                                    <i class="fas fa-trash"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>